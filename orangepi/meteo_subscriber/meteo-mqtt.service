[Unit]
Description=Meteo MQTT Listener Service
After=network.target mosquitto.service

[Service]
Type=simple
User=<your_user>
WorkingDirectory=/home/<your_user>/dafer-embedded/orangepi/meteo_subscriber
ExecStart=/bin/bash -c 'source /path/to/your/venv/bin/activate && python main.py'
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=meteo-mqtt

[Install]
WantedBy=multi-user.target
